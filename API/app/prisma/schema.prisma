// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id
  name        String
  email       String
  password    String
  phone       String
  age         String
  address     Address?
  isAdmin     Boolean
  register_at DateTime
}

model Address {
  id           String   @id
  road         String
  neighborhood String
  number       String
  complement   String
  user         User?    @relation(fields: [userId], references: [id])
  userId       String   @unique
  register_at  DateTime
  pgm          Pgm?     @relation(fields: [pgmId], references: [id])
  pgmId        String   @unique
  event        Event?   @relation(fields: [eventId], references: [id])
  eventId      String   @unique
}

model Pgm {
  id          String   @id
  name        String
  description String
  time        String
  location    String
  address     Address?
}

model Event {
  id       String   @id
  name     String
  date     String
  location String
  address  Address?
}
